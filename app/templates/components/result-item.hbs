{{#if result.content}}
<h5>{{truncateHelper result.resultTitle 75}} <small>Date: {{result.date}}</small></h5>
<dl class="dl-horizontal">
  <dt>Content</dt>
  <dd>{{truncateHelper result.content 400}}</dd>
  <dt>Modality</dt>
  <dd>{{result.modality}}</dd>
  <dt>Article</dt>
  <dd><a href="{{result.articleLink}}" {{action "logclick" preventDefault=false}}>{{result.linkTitle}}</a></dd>
  {{#if result.figsonlyLink}}
    <dt>Images</dt>
    <dd><a href="{{result.figsonlyLink}}" {{action "logclick" preventDefault=false}}>{{result.figsonlyLink}}</a></dd>
  {{/if}}
  <dt>Source</dt>
  <dd>{{result.source}}</dd>
</dl>
{{else}}
<p>ERROR - Content missing from result</p>
{{/if}}
{{yield}}
